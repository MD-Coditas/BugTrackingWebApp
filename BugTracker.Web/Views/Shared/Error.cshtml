@{
    ViewData["Title"] = "Error";
    Layout = "_Layout"; // or null for a minimal page
}

<div class="container mt-5">
    <h2 class="text-danger">Something went wrong</h2>
    <p class="text-muted">We're sorry, an unexpected error occurred.</p>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning mt-4">
            <strong>Details:</strong> @ViewBag.ErrorMessage
        </div>
    }

    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Go back home</a>
</div>
